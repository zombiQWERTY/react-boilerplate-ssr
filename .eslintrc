{
  "parser": "babel-eslint",
  "extends": [
    "eslint-config-airbnb",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "no-multi-spaces": [
      "error",
      {
        "exceptions": {
          "ImportDeclaration": true,
          "Property": true,
          "VariableDeclarator": true
        }
      }
    ],
    "jsx-a11y/no-static-element-interactions": 0,
    "no-underscore-dangle": 0,
    "linebreak-style": 0,
    "consistent-return": 0,
    "global-require": 0,
    "new-cap": [
      2,
      {
        "capIsNewExceptions": [
          "List",
          "Map",
          "Set"
        ]
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "react/no-danger": 0,
    "react/no-unused-prop-types": 0,
    "react/no-multi-comp": 0,
    "react/forbid-prop-types": 0,
    "react/prefer-stateless-function": 0,
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2,
    "import/no-extraneous-dependencies": 0,
    "comma-dangle": 0,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-console": 0,
    "no-alert": 0,
    "no-unused-vars": 1,
    "import/extensions": 0
  },
  "plugins": [
    "react",
    "import",
    "flowtype"
  ],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    },
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": [
        "node_modules",
        "src"
      ]
    }
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__DEVTOOLS__": true
  }
}
